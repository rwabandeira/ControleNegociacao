unit Menu;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, Menus, Cadastros;

type
  TFormMenu = class(TForm)
    mmMenu: TMainMenu;
    miParametros: TMenuItem;
    miProdutor: TMenuItem;
    miProduto: TMenuItem;
    miNegociacao: TMenuItem;
    procedure miProdutorClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FormMenu: TFormMenu;

implementation

{$R *.dfm}

procedure TFormMenu.miProdutorClick(Sender: TObject);
var
  frmCadastros: TfrCadastros;
begin
  frmCadastros := TfrCadastros.Create(Application);
  frmCadastros.ShowModal;
end;

end.
