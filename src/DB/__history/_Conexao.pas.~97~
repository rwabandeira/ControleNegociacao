unit _Conexao;

interface

uses
  SqlExpr, Classes, _DB;

type
  Conexao = class(TComponent)
    public
      constructor Create(AOwner: TComponent); override;
      destructor Destroy; override;
    protected
      con: TSQLConnection;
  end;

implementation

{ Conexao }

constructor Conexao.Create(AOwner: TComponent);
begin
  inherited Create(AOwner);
//  con := _DB.Conexao;
end;

destructor Conexao.Destroy;
begin
  con.Free;
  inherited Destroy;
end;

end.
